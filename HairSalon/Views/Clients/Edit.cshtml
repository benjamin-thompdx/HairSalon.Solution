@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit</h2>

<h4>Edit this client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClientId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Phone_Number)
    @Html.EditorFor(model => model.Phone_Number)
    <br>
        @Html.LabelFor(model => model.Email)
    @Html.EditorFor(model => model.Email)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Back to clients", "Index")</p>