@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
<br>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Phone_Number)
    @Html.TextBoxFor(model => model.Phone_Number)
    <br>
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Add new client" class="btn btn-default" />
}
<br>
<p>@Html.ActionLink("Show all clients", "Index")</p>